{
	"name": "brawl-tracker-root",
	"type": "module",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"ci:build": "turbo run build --filter=@brawltracker/web^...",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"generate": "turbo run generate",
		"test": "vitest run",
		"test:watch": "vitest watch --ui",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"ci": "vitest run && turbo run format && turbo run lint",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "turbo build --filter=@brawltracker/web^... && changeset publish",
		"db:start": "docker-compose up -d",
		"db:stop": "docker-compose down"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.1",
		"@humanwhocodes/retry": "^0.3.0",
		"@sapphire/eslint-config": "^5.0.3",
		"@types/pg": "^8",
		"@vitest/ui": "^2.1.3",
		"eslint": "^8.57.0",
		"eslint-config-neon": "^0.1.62",
		"lint-staged": "^15.2.0",
		"pg": "^8.12.0",
		"prettier": "^3.2.4",
		"prettier-plugin-tailwindcss": "^0.6.6",
		"turbo": "^2.1.0",
		"vitest": "^2.1.3"
	},
	"resolutions": {
		"sharp": "0.32.6"
	},
	"packageManager": "yarn@4.2.2",
	"volta": {
		"node": "20.11.0",
		"yarn": "4.1.0"
	},
	"lint-staged": {
		"*": "prettier --ignore-unknown --write",
		"*.{mjs,js,ts,vue}": "eslint --fix"
	},
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"dependencies": {
		"@nuxt/ui-pro": "patch:@nuxt/ui-pro@npm%3A1.4.3#~/.yarn/patches/@nuxt-ui-pro-npm-1.4.3-c79a6386e3.patch"
	}
}
