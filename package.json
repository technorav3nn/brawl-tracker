{
	"name": "brawl-tracker-root",
	"type": "module",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"ci:build": "turbo run build --filter=@brawltracker/web^...",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"generate": "turbo run generate",
		"test": "vitest run",
		"test:watch": "vitest watch --ui",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"ci": "vitest run && turbo run format && turbo run lint",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "turbo build --filter=@brawltracker/web^... && changeset publish",
		"db:start": "docker-compose up -d",
		"db:stop": "docker-compose down"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.12",
		"@humanwhocodes/retry": "^0.4.1",
		"@sapphire/eslint-config": "^5.0.5",
		"@vitest/ui": "^3.0.4",
		"eslint": "^8.57.0",
		"eslint-config-neon": "^0.1.62",
		"lint-staged": "^15.4.2",
		"prettier": "^3.4.2",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"turbo": "^2.3.4",
		"vitest": "^3.0.4"
	},
	"resolutions": {
		"sharp": "0.33.5"
	},
	"packageManager": "yarn@4.6.0",
	"volta": {
		"node": "22.13.1",
		"yarn": "4.6.0"
	},
	"lint-staged": {
		"*": "prettier --ignore-unknown --write",
		"*.{mjs,js,ts,vue}": "eslint --fix"
	},
	"workspaces": [
		"packages/*",
		"apps/*"
	]
}
