{
	"extends": ["../../tsconfig.json"],
	"compilerOptions": {
		"rootDir": "src",
		"baseUrl": "src",
		"paths": {
			"$root/*": ["*"],
			"$lib/*": ["lib/*"]
		},
		"lib": ["ESNext", "DOM"],
		"emitDecoratorMetadata": false,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"outDir": "dist"
	},
	"include": ["src", "./**/*.json"]
}
